<mvc:View controllerName="com.lab2dev.firstapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
		<Page id="page" title="{i18n>title}">
		<content>
      <List
		headerText="Products"
		headerLevel="H2"
		items="{listModel>/}" >
		<ObjectListItem
			title="{listModel>name}"
			type="Active"
			press="onPress"
			number="{
				parts:[{path:'listModel>Price'},{path:'listModel>CurrencyCode'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {showMeasure: false}
			}"
			numberUnit="{listModel>CurrencyCode}">
			<firstStatus>
				<ObjectStatus
					text="{listModel>Status}"
					state="{
						path: 'listModel>Status',
						formatter: 'com.lab2dev.firstapp.controller.Formatter.status'
					}" />
			</firstStatus>
			<ObjectAttribute text="{listModel>WeightMeasure} {listModel>WeightUnit}" />
			<ObjectAttribute text="{listModel>Width} x {listModel>Depth} x {listModel>Height} {listModel>DimUnit}" />
		</ObjectListItem>
	</List>
	</content>
	</Page>
</mvc:View>